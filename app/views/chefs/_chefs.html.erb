<% if chefs.present? %>
    <% chefs.each do |c| %>
        <div class="col-md-3 add-margin-bottom">
            <a href="/c/<%= c.username || c.id %>" class="background-transparent theme-blue no-underline">
                <div class="card cursor-pointer chef-card">
                    <div class="card-header"
                        style="background-image: url('/images/dinnerhost_banner.png');
                            background-size: cover; background-position: center;
                            height: 120px;"></div>
                    <div class="card-body" align="center">
                        <div id="chef-avi" align="center" class="cursor-pointer"
                            style="height: 100px; width: 100px;
                                    overflow: hidden; border-radius: 50px;
                                    border: 4px solid #fff; margin-top: -60px;">
                            <img src="<%= c.image %>" alt="chef"
                                style="height: auto; width: inherit;">
                        </div>
                        
                        <div class="add-margin-top">
                            <p class="font-15 bold"><%= c.full_name %></p>
                        </div>
                        
                        <div class="add-margin-top">
                            <% 5.times.each_with_index do |s, idx| %>
                                <span class="star rated-star">
                                    <i class="<%= star_rating(idx + 1, c) %> theme-cyan"
                                        style="font-size: 17px;"></i>
                                </span>
                            <% end %>
                            <span class="rating-count" style="font-size: 15px;">
                                <%= c.rating_count %>
                            </span>
                        </div>
                        
                        <div class="add-margin-top">
                            <span class="badge badge-warning font-15">
                                <%= pluralize(c.meals.count, 'listing') %>
                            </span>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    <% end %>
<% else %>
    <div class="col-md-12">
        <p>No results found. Our chefs are actively adding new listings, so check back soon!</p>
    </div>
    
    <div class="col-md-12" align="center" style="margin-top: 20px;">
        <button class="btn btn-primary box-shadow height-50" style="text-transform: uppercase;">
            Refer a chef. Earn $20
        </button>
    </div>
<% end %>

<script type="text/javascript">
    $chefCard = $('.chef-card');
    $chefCard.hover(shadowCard);
    
    function shadowCard() {
        $(this).toggleClass('box-shadow-amp');
    };
</script>