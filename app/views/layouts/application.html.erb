  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBfq6dmOO99qdVIkiI92DyhGoYJ5uD7qg&libraries=places&callback=initMap"
        async defer></script>
  <script>
    $(function () {
        $(document).scroll(function () {
          var $nav = $(".main--navbar");
          $nav.toggleClass('scrolled fixed-top', check($nav));
        });
        
        function check(nav) {
          if ($(this).scrollTop() > nav.height()) {
            $('#navbar-search').show();
            $('.main-nav-link').css('color', '#000');
            $('.main-nav-link').css('font-weight', 'normal');
            return true;
          } else {
            <% if current_page? root_url %>
              $('#navbar-search').hide();
              $('.main-nav-link').css('color', '#fff');
              $('.main-nav-link').css('font-weight', 'bold');
            <% else %>
              $('.main-nav-link').css('color', 'initial');
              $('.main-nav-link').css('font-weight', 'initial');
            <% end %>
            return false;
          }
        }
    });
  </script>
  <body id="body"> 
    <%= render navbar %>
    <%= render body %>
    <%= render footer %>
  </body>
</html>
