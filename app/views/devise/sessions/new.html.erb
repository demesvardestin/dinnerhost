<section id="store-login">
  <div class="row">
    <div class="col-md-6 offset-md-6">
      <div class="card">
        <div class="card-body">
          <div class="header">
            <h5 class="text-center medium-gray">Store login</h5>
            <hr style="text-align: center; width: 25%;">
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <% if !devise_error_messages!.empty? %>
                <div id="error_explanation">
                  <ul>
                    <li><%= devise_error_messages! %></li>
                  </ul>
                </div>
              <% end %>
              
              <div class="field">
                <%= f.email_field :email, required: true, class:"form-control height-50 no-box-shadow", autofocus: true, placeholder:"Email", input_html: { autocomplete: 'email' } %>
              </div>
            
              <div class="field">
                <%= f.password_field :password, required: false, class:"form-control height-50 no-box-shadow", input_html: { autocomplete: "current-password" }, placeholder:"Password" %>
              </div>
            
              <div class="actions" style="margin-top: 10px;">
                <div class="row">
                  <div class="col-md-12">
                    <%= f.submit "Log in", class:"btn btn-primary btn-block box-shadow height-50 log-in", id:"logIn" %>
                  </div>
                  <div class="col-md-12 add-padding-top text-center">
                    <%= link_to "Don't have an account? Register here", register_a_store_path, class:"background-transparent theme-blue font-16 display-block" %>
                    <%= link_to "Forgot your password?", store_retrieve_password_path, class:"background-transparent theme-blue font-16 display-block" %>
                  </div>
                </div>
              </div>
              
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  $('#new_store').on('submit', e => {
    $('#logIn').css('opacity', '0.7');
    document.getElementById('logIn').value = 'Logging you in...';
  });
</script>
