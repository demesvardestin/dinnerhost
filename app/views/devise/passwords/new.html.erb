<section id="store-login" class="container" style="margin-bottom: 125px; margin-top: 50px;">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header theme-background">
          <h5 class="white text-center">Forgot your password?</h5>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-inputs" style="vertical-align: middle !important;">
              <% if !devise_error_messages!.empty? %>
                <div id="error_explanation">
                  <ul>
                    <li><%= devise_error_messages! %></li>
                  </ul>
                </div>
              <% end %>
              
              <div class="form-inputs">
                <%= f.email_field :email,
                            required: true,
                            autofocus: true,
                            class:"form-control height-55 no-box-shadow", placeholder:"Email" %>
              </div>
            
              <div class="form-actions add-margin-top">
                <%= f.submit "Send me reset instructions", class:"btn btn-primary btn-block height-55 log-in no-box-shadow" %>
              </div>
              
              <div class="col-md-12 add-padding-top text-center">
                <%= link_to "Log into your account", store_retrieve_password_path, class:"background-transparent theme-blue font-16 display-block", onclick:"window.location.replace('/store/login');" %>
                <%= link_to "Don't have an account? Register here", register_a_store_path, class:"background-transparent theme-blue font-16 display-block", onclick:"window.location.replace('/register-a-store');" %>
              </div>
              
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
