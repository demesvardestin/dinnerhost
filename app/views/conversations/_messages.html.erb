<style>
    .sender-avatar, .sender-message {
        display: inline-block;
    }
</style>

<% messages.each do |m| %>
    <div class="col-md-12" style="margin-top: 20px;">
        <% if m.sender != user %>
            <div class="sender-avatar float-left" style="width: 20%;">
                <div id="cook-avi" class="cursor-pointer"
                    style="height: 60px; width: 60px;
                            overflow: hidden; border-radius: 30px;
                            border: 0.5px solid #e7e7e9;"
                    id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="<%= m.sender.image %>" alt="cook"
                        style="height: auto; width: inherit;">
                </div>
            </div>
        <% end %>
        <% if m.sender == user %>
            <div class="sender-avatar float-right text-right" style="width: 11%; margin-left: 9%;">
                <div id="cook-avi" class="cursor-pointer"
                    style="height: 60px; width: 60px;
                            overflow: hidden; border-radius: 30px;
                            border: 0.5px solid #e7e7e9;"
                    id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="<%= m.sender.image %>" alt="cook"
                        style="height: auto; width: inherit;">
                </div>
            </div>
        <% end %>
        <div class="card sender-message <%= message_box_alignment(m.sender_type) %>" style="width: 80%;">
            <div class="card-body text-left">
                <p><%= m.content %></p>
                <p class="font-14 opaque message-timestamp"><%= m.created_at.strftime('%b %e, %Y') %></p>
            </div>
        </div>
    </div>
<% end %>