<div class="datetime-picker-div font-15 add-margin-top">
    <div class="row">
        <div class="col-md-12">
            <span class="start-date float-left text-muted" style="width: 42.5%;">
                <input class="form-control no-border cursor-pointer no-box-shadow
                    background-transparent start-date-input"
                    style="padding: 0; padding-left: 10px; margin: auto; max-height: 99% !important;"
                    placeholder="Start Date" type="text" onchange="updateReservationParams()">
            </span>
            <span class="float-left text-center add-padding-top" style="width: 15%;">
                <i class="fa fa-long-arrow-right"></i>
            </span>
            <span class="end-date float-left text-muted" style="width: 42.5%;">
                <input class="form-control no-border cursor-pointer no-box-shadow
                    background-transparent end-date-input"
                    style="padding: 0; padding-left: 10px; margin: auto; max-height: 99% !important;"
                    placeholder="End Date" type="text" onchange="updateReservationParams()">
            </span>
        </div>
    </div>
</div>

<script type="text/javascript">
    $( ".start-date-input, .end-date-input" ).datepicker({minDate: new Date()});
</script>