<div class="row">
    <div class="col-md-12">
        <div class="datetime-picker-div font-15 add-margin-top float-left text-muted"
            style="width: 47.5%;">
            <span class="start-date text-muted">
                <input class="form-control no-border cursor-pointer no-box-shadow
                    background-transparent start-date-input"
                    style="padding: 0; padding-left: 10px; margin: auto; max-height: 99% !important;"
                    placeholder="Select a date" type="text" onchange="updateReservationParams()">
            </span>
        </div>
        
        <div class="time_picker float-left text-muted font-15 add-margin-top"
            style="width: 47.5%; margin-left: 5%;">
            <div class="row">
                <div class="col-md-12">
                    <span class="float-left" id="chosen-time">Time</span>
                    <span class="float-right">
                        <i class="fa fa-angle-down" style="margin-left: 10px;"></i>
                    </span>
                </div>
            </div>
        </div>
        
        <div id="times" class="box-shadow">
            <% hours.each do |h| %>
                <div id="hour-<%= h %>" class="hour" onclick="chooseTime(this)">
                    <%= h %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<script type="text/javascript">
    $( ".start-date-input" ).datepicker({minDate: new Date(), dateFormat: "dd-mm-yy"});
    
    $(".time_picker").on("click", displayTimes);
</script>